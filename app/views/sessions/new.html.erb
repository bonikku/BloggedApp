<h1 class="text-center mt-4">Log in</h1>

<div class="container mt-4">

  <div class="row justify-content-center text-white">
    <div class="col col-md-5">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-4 mb-3 bg-limenew rounded", local: true) do |form| %>

        <div class="form-group font-weight-bold">
          <%= form.label :email, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group font-weight-bold">
          <%= form.label :password, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit "Log in", class: "btn btn-light btn-lg" %>
        </div>
      <% end %>
      <div class="text-center justify-content-center mb-2">
        <%= link_to 'Return to home page', root_path, class: "text-center btn btn-sm btn-secondary" %>
      </div>
    </div>
  </div>
</div>