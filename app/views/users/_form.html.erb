<div class="container mt-4">

  <div class="row justify-content-center text-white">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
    </div>
    <div class="col col-md-5">
      <%= form_with(model: @user, class: "shadow p-4 mb-3 bg-limenew rounded", local: true) do |form| %>
        <div class="form-group font-weight-bold">
          <%= form.label :username, class: "col-2" %>
          <div class="m-1">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username" %>
          </div>
        </div>

        <div class="form-group font-weight-bold">
          <%= form.label :email, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group font-weight-bold">
          <%= form.label :password, class: "col-2 col-form-label" %>
          <div class="m-1">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Edit account", class: "btn btn-primary btn-lg") %>
        </div>
        <% if logged_in? %>
          <div class="form-group row justify-content-center">
            <%= link_to 'Delete account', user_path(current_user), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure you want to delete your account?' } %>
          </div>
        <% end %>
      <% end %>
      <div class="text-center justify-content-center mb-2">
        <%= link_to 'Return to articles', articles_path, class: "text-center btn btn-sm btn-secondary" %>
      </div>
    </div>
  </div>
</div>