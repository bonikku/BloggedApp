<h1 class="text-center mt-4 mb-4">Categories</h1>

<div class="d-flex justify-content-center mb-5">
  <%= will_paginate @categories %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center mb-5">
      <div class="col-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
          </div>
          <div class="card-footer text-muted">
            <small><%= time_ago_in_words(category.created_at) %>,
              <%= time_ago_in_words(category.updated_at) %>
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mb-3">
  <%= will_paginate @categories %>
</div>