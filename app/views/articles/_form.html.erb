<div class="container">

  <div class="row justify-content-center text-white">
    <div class="col-10">
      <%= render 'shared/errors' %>
    </div>
    <div class="col-8">
      <%= form_with(model: @article, class: "shadow p-4 mb-3 bg-limenew rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Article title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Article description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-light btn-lg" %>
        </div>
      <% end %>
      <div class="text-center justify-content-center">
        <%= link_to 'Return to articles', articles_path, class: "text-center btn btn-sm btn-secondary" %>
      </div>
    </div>
  </div>
</div>